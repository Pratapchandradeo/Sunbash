import com.Sunbash.PlayLoad.CustomerDto;
import com.Sunbash.PlayLoad.CustomerResponseDto;

public interface CustomerService {

	CustomerResponseDto createCustomer(CustomerDto customer);
	CustomerResponseDto updateCustomer(UUID id, CustomerDto customer);
	CustomerResponseDto deleteCustomer(UUID id);
	
	List<CustomerResponseDto> getAllCustomer();
}
